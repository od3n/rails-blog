<h1>My Blog</h1>

<% @blog_posts.each do |blog_post| %>
    <div>
        <h2><%= link_to blog_post.title, blog_post %></h2>
        <% if blog_post.draft? %>
            <span class="p-2 rounded bg-gray-100 text-gray-900">Draft</span>
        <% elsif blog_post.scheduled? %>
            <span class="p-2 rounded bg-blue-100 text-blue-900">Scheduled</span>
        <% end %>
        <span><%= blog_post.published_at&.strftime('%Y-%m-%d %H:%M:%S') %></span>
        <p><%= blog_post.body %></p>
    </div>
<% end %>